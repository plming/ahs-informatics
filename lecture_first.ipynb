      "source": [
        "num1 = int(input(\"첫 번째 숫자를 입력해주세요: \"))\n",
        "operator = input(\"연산자를 입력해주세요(ex. + - * /): \")\n",
        "num2 = int(input(\"두 번째 숫자를 입력해주세요: \"))\n",
        "\n",
        "if operator == \"+\":\n",
        "    print(num1, \"+\", num2, \"=\", num1 + num2)\n",
        "elif operator == \"-\":\n",
        "    print(num1, \"-\", num2, \"=\", num1 - num2)\n",
        "elif operator == \"*\":\n",
        "    print(num1, \"*\", num2, \"=\", num1 * num2)\n",
        "elif operator == \"/\":\n",
        "    print(num1, \"/\", num2, \"=\", num1 / num2)\n",
        "else:\n",
        "    print(\"잘못된 연산자입니다.\")"
      ]
    },
